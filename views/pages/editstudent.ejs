        <h3>Update this student's information.</h3>
        <form class = "editStudent" action="/editStudent" method="POST">
            <span>StudentID:</span>
            <input type="number" name="StudentID" value="<%= r.studentid %>" readonly><br>
            <span>Name:</span>
            <input type="text" name="Name" value="<%= r.name %>" required><br>
            <span>Weight(lbs):</span>
            <input type="number" min="0" max="1000" name="Weight" value="<%= r.weight %>" required><br>
            <span>Height(cm):</span>
            <input type="number" min="0" max="500" name="Height" value="<%= r.height %>" required><br>
            <!-- <span>Hair Color:</span>
            <input type="text" name="HairColor" value=""><br> -->
            <span>Hair Color:</span>
            <select name = "HairColor">
                <option selected="selected"><%= r.haircolor %></option> 
                <option value="Brown">Brown</option>
                <option value="Black">Black</option>
                <option value="Red">Red</option>
                <option value="Yellow">Yellow</option>
            </select> <br>
            <span>GPA:</span>
            <input type="number" min="0" max="4.3" step="any" name="GPA" value="<%= r.gpa %>" required><br>
            <span>Sex:</span>
            <select name = "Sex">
                <option selected="selected"><%= r.sex %></option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select> <br><br>
            <button>ACCEPT</button>
        </form>

      </body>
</html>